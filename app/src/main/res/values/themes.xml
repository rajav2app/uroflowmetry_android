<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UroflowmetryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/font_black</item>
        <item name="colorPrimaryVariant">@color/font_black</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.UroflowmetryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.UroflowmetryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.UroflowmetryApp.MyToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/font_black</item>
        <item name="popupMenuBackground">@color/background_splash</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/myriad_pro_regular</item>
        <item name="android:itemPadding">10dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/background_button_green</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="backgroundTint">@color/background_button_green</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/background_button_green</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/myriad_pro_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">40sp</item>
        <item name="paddingStart">40dp</item>
        <item name="fontFamily">@font/myriad_pro_regular</item>
    </style>

    <style name="Buttontheme" parent="Widget.AppCompat.Button" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">3dp</item>
        <item name="backgroundTint">@color/mute_button_color</item>
        <item name="iconTint">@color/background_button_green</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/background_abnormal</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>