<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="5dp"
    android:background="@color/background_alpha24_green">

    <TextView
        android:id="@+id/recycler_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/myriad_pro_regular"
        android:textSize="@dimen/text_size_20sp"
        android:layout_weight="3"
        />

    <TextView
        android:id="@+id/recycler_flow_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/myriad_pro_semibold"
        android:textSize="@dimen/text_size_25sp"
        android:gravity="center"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/recycler_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/myriad_pro_semibold"
        android:textSize="@dimen/text_size_25sp"
        android:gravity="center"
        android:layout_weight="1" />
</LinearLayout>