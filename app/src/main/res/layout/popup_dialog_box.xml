<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_green"
        android:fontFamily="@font/myriad_pro_bold"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:text="Export"
        android:textAlignment="center"
        android:textColor="@color/font_white"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="24dp" />



    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:backgroundTint="@color/font_black"
            android:fontFamily="@font/myriad_pro_regular"
            app:hintTextColor="@color/font_black">
            <AutoCompleteTextView
                android:id="@+id/autoStartDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/elevated_radius"
                android:fontFamily="@font/myriad_pro_regular"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/font_black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/ic_link" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/font_black"
            android:fontFamily="@font/myriad_pro_regular"
            app:hintTextColor="@color/font_black">
            <AutoCompleteTextView
                android:id="@+id/autoEndDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/elevated_radius"
                android:fontFamily="@font/myriad_pro_regular"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/font_black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/background_button_main_menu_button"
        android:text="Cancel"
        android:layout_weight="1"
        android:textColor="@color/font_black"
        android:textSize="20dp"
       />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/export"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/font_green"
        android:text="Export"
        android:layout_weight="1"
        android:textSize="20dp"
      />
    </LinearLayout>
    

</LinearLayout>